bin/start-dfs.sh

sbin/stop-dfs.sh

hadoop fs -mkdir Assignment1

hadoop fs -put /home/hadoop/Desktop/Assignment1/ocr.txt Assignment1

hadoop fs -cat /Assignment1/ocr.txt

hadoop fs -ls Assignment1

